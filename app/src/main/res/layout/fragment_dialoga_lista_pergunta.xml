<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.monitorabrasil.participacidadao.view.fragments.DialogaActivityFragment">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        layout="@layout/topo_dialoga"
        android:id="@+id/linearLayout"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_perguntas"
        android:scrollbars="vertical"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_height="match_parent"
        android:layout_margin="16dp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@mipmap/ic_add"
        android:layout_marginBottom="27dp"
        android:layout_alignBottom="@+id/rv_perguntas"
        android:layout_alignRight="@+id/rv_perguntas"
        android:layout_alignEnd="@+id/rv_perguntas" />

</RelativeLayout>
